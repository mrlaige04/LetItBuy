@using Shop.Models.UserModels;
@model IEnumerable<UserDTO>;


<table class="table table-hover">
    <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
  </thead>
  <tbody>
      @if(Model!=null) {
          @foreach (var user in Model)
          {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td><a asp-controller="Admin" asp-action="EditUser" asp-route-email="@user.Email">Edit</a></td>
                    <td><a asp-controller="Admin" asp-action="DeleteUser" asp-route-email="@user.Email">Delete</a></td>
                </tr>
            }
      }      
  </tbody>
</table>