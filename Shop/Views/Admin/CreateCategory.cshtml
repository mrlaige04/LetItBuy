        row.classList.add('row');
        
        var col1 = document.createElement('div');  // Create div-col with criteria name
        col1.classList.add('col-md-4');
        col1.classList.add('criteria-name');

        var input = document.createElement('input'); // Criteria name input field
        input.type = 'text';
        input.classList.add('form-control');
        input.name = 'strings[0].name';
        
        col1.appendChild(input); // Append input to col1
        criteria.appendChild(col1); // Append col1 to criteria

        

        
        var defvalues = document.createElement('div'); // Create div with default values
        defvalues.classList.add('criteria-defvalues');
        var p = document.createElement('p'); // Create p with default values
        p.innerText = 'Default Values:';
        defvalues.appendChild(p); // Append p to defvalues
