                                                    <li class="col-md-8"><input asp-for="numbers[0].values[3]" type="number" class="form-control" name="numbers[0].values[3]" value="" id=""></li>
                                                </ul>
                                            </div>
                                        </div> 
                                        <div class="criteria">
                                            <div class="row">
                                                <div class="col-md-4 criteria-name">
                                                    <input asp-for="strings[0].name" type="text" class="form-control" name="strings[0].name" />
                                                </div>
                                            </div>
                                            <div class="criteria-defvalues">
                                                <p>Default Values:</p>
                                                <ul class="list-unstyled list-group">
                                                    <li class="col-md-8"><input asp-for="strings[0].values[0]" type="text" class="form-control" name="strings[0].values[0]" id=""></li>
                                                    <li class="col-md-8"><input asp-for="strings[0].values[1]" type="text" class="form-control" name="strings[0].values[1]" id=""></li>
                                                    <li class="col-md-8"><input asp-for="strings[0].values[2]" type="text" class="form-control" name="strings[0].values[2]" id=""></li>
                                                    <li class="col-md-8"><input asp-for="strings[0].values[3]" type="text" class="form-control" name="strings[0].values[3]" id=""></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary mt-3" type="submit">s</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

