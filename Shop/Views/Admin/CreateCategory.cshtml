@model CreateCatalogViewModel;
@{
    
    
}
<div class="pagetitle">
    <h1>Home</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item active">Create Category</li>
        </ol>
    </nav>
</div>
<section>
    <div class="row">
        <div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create Category</h5>
                    <div class="categoryform">
                        <form id="cat-form" asp-controller="Admin" asp-action="CreateCategory" method="post">
                            <div class="form-group">
                                <div class="category-name">
                                    <label for="cat_name">Name</label>
                                    <input asp-for="Name" type="text" required name="Name" id="cat-name" class="form-control">
                                </div>
                                <div class="border-top my-3"></div>
                                <h3>Criterias</h3>
                                <div class="category-criterias">
                                    <div class="criterias-list mt-3">
                                        <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="borderedTabJustified" role="tablist">
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100 active" id="home-tab" data-bs-toggle="tab" data-bs-target="#bordered-justified-home" type="button" role="tab" aria-controls="home" aria-selected="false" tabindex="-1">Number</button>
                                            </li>
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100 " id="profile-tab" data-bs-toggle="tab" data-bs-target="#bordered-justified-profile" type="button" role="tab" aria-controls="profile" aria-selected="true">String</button>
                                            </li>
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100" id="contact-tab" data-bs-toggle="tab" data-bs-target="#bordered-justified-contact" type="button" role="tab" aria-controls="contact" aria-selected="false" tabindex="-1">Date</button>
                                            </li>
                                        </ul>
                                        <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                                            <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                                                <button onclick="appendNumberCrit()" type="button" class="btn btn-light col-md-12" id="addNumbCrit">Add new</button>
                                                <div class="numbercriterias border-bottom">
                                                    <div class="criteria mt-3 mb-3">
                                                        <div class="criteria">
                                                            <div class="row">
                                                                <div class="col-md-4 criteria-name">
                                                                    <input  asp-for="numbers[0].name" type="text" class="form-control" name="numbers[0].name" />
                                                                </div>
                                                            </div>
                                                            <div class="criteria-defvalues">
                                                                <p>Default Values:</p>
                                                                <input type="text" id="testinputtagify" asp-for="shoto" name="shoto" class="form-control" />
                                                            </div>
                                                        </div> 
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="tab-pane fade" id="bordered-justified-profile" role="tabpanel" aria-labelledby="profile-tab">
                                                <button onclick="appendStringCrit()" type="button" class="btn btn-light col-md-12" id="addStringCrit">Add new</button>
                                                <div class="stringcriterias">
                                                    <div class="criteria">
                                                        <div class="row">
                                                            <div class="col-md-4 criteria-name">
                                                                <input asp-for="strings[0].name" type="text" class="form-control" name="strings[0].name" />
                                                            </div>
                                                        </div>
                                                        <div class="criteria-defvalues">
                                                            <p>Default Values:</p>
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>



                                            
                                        </div>

                                        
                                        
                                        
                                        
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary mt-3" type="submit">s</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
