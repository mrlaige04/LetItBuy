                                        <button class="btn btn-primary" onclick="appendCriteria('string')">Add string</button>
                                        <button class="btn btn-primary" onclick="appendCriteria('date')">Add date</button>
                                    </div>
                                    <div class="criterias-list mt-3">
                                        <div class="criteria">
                                            <div class="row">
                                                <div class="col-md-4 criteria-name">
                                                    <input asp-for="numbers[0].name" type="text" class="form-control" name="numbers[0].name" />
                                                </div>
                                            </div>
                                            <div class="criteria-defvalues">
                                                <p>Default Values:</p>
                                                <ul class="list-unstyled list-group">
                                                    <li class="col-md-8"><input asp-for="numbers[0].values[0]" type="number" class="form-control" name="numbers[0].values[0]" value="" id=""></li>
                                                    <li class="col-md-8"><input asp-for="numbers[0].values[1]" type="number" class="form-control" name="numbers[0].values[1]" value="" id=""></li>
