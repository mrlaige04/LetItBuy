@using Shop.Models.UserModels
@model ItemAddViewModel;
<form asp-action="AddItem">
    <div class="form-group">
        <label for="itemName">Item Name</label>
        <input asp-for="Name" type="text" class="form-control" required id="itemName" placeholder="Enter item name">
    </div>
    <div class="form-group">
        <label for="itemName">Item Price</label>
        <input asp-for="Price" type="number" class="form-control" required id="itemName" placeholder="Enter item price">
    </div>
    <div class="form-group">
        <label for="itemName">Item description</label>
        <input asp-for="Description" type="text" class="form-control" required id="itemName" placeholder="Enter item description">
    </div> <br />
     <div class="d-grid gap-2">
         <button class="btn btn-lg btn-primary" type="submit">Add item</button>                  
     </div>
    
</form>