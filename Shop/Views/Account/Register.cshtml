@using Microsoft.AspNetCore.Mvc.Localization

@using Shop.UI.Models.Identity
@model RegisterViewModel
@inject IViewLocalizer Localizer
@{
    Layout = null;
}


<html>
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        
        <!-- Google Fonts -->
        <link href="https://fonts.gstatic.com" rel="preconnect">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- Vendor CSS Files -->
        <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css">
        <link href="~/assets/css/style.css" rel="stylesheet">
        
        <title>@Localizer["Register"]</title>     
    </head>
    <body>
    <main>
        <div class="container">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
        
                            <div class="d-flex justify-content-center py-4">
                                <a href="/" class="logo d-flex align-items-center w-auto">
                                    
                                    <span class="d-none d-lg-block">LetItBuy</span>
                                </a>
                            </div>
                            <!-- End Logo -->
        
                            <div class="card mb-3">
        
                                <div class="card-body">
        
                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">@Localizer["CreateanAccount"]</h5>
                                    </div>
        
                                    <form class="row g-3" asp-controller="Account" asp-action="Register" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="col-12">
                                            <label asp-for="Email" for="yourEmail" class="form-label"></label>
                                            <input asp-for="Email" type="email" name="email" class="form-control" id="yourEmail" required>
                                            <span asp-validation-for="Email"></span>
                                        </div>
        
                                        <div class="col-12">
                                            <label asp-for="UserName" for="yourUsername" class="form-label"></label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-at"></i></span>                                                
                                                <input asp-for="UserName" type="text" name="username" class="form-control" id="yourUsername" required>
                                                <span asp-validation-for="UserName"></span>
                                            </div>
                                        </div>
        
                                        <div class="col-12">
                                            <label asp-for="Password" for="yourPassword" class="form-label"></label>
                                            <input asp-for="Password" type="password" name="password" class="form-control" id="yourPassword" required>
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                        
                                        <div class="col-12">
                                            <label asp-for="ConfirmPassword" for="yourPassword" class="form-label"></label>
                                            <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control" id="yourPassword" required>
                                            <span asp-validation-for="ConfirmPassword"></span>
                                        </div>
        
        
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">@Localizer["CreateAccount"]</button>
                                        </div>
                                        <div class="col-12">
                                            <p class="small mb-0">@Localizer["Alreadyhaveanaccount"] <a asp-action="Login" asp-controller="Account">@Localizer["Login"]</a></p>
                                        </div>
                                        <div class="col-12 text-center">
                                            @foreach (var provider in Model.ExternalProviders)
                                                {
                                                    <a asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="@provider.Name" value="@provider.Name" asp-route-returnUrl="@Model.ReturnUrl" name="provider">
                                                        @if(provider.Name=="Google") {
                                                            <i class="bi text-dark display-6 bi-google"></i>
                                                        } else if(provider.Name=="Facebook") {
                                                            <i class="bi text-dark display-6 bi-facebook"></i>
                                                        } else if (provider.Name=="Microsoft") {
                                                            <i class="bi bi-microsoft display-6 text-dark"></i>
                                                        } else if (provider.Name == "Twitter") {
                                                            <i class="bi bi-twitter display-6 text-dark"></i>
                                                        }
                                                    </a>
                                                }
                                        </div>
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
   @* <script src="~/js/bootstrap.min.js"></script>*@
    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
</body>
</html>
