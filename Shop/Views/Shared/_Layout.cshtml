<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TestTask</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.0/lux/bootstrap.min.css" integrity="sha512-X2LR7g52cSDb7+Sdq0+wdpKfpYkLW1Q+Q21VrF1g9F7ubW6DE7Yncm7qd20F8NU/XMt2+uUhnD5WcLZenCDCxg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
	@if (User.Identity.IsAuthenticated)
	{
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" asp-controller="Home" asp-action="WelcomePage">MultiShop</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" asp-action="WelcomePage" asp-controller="Home">Main</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="GetUsersCatalogs">@User.Identity.Name</a>
						</li>
					</ul>
					<form class="nav-item" asp-action="Logout" asp-controller="Account">
						<ul class="navbar-nav">
							<li class="nav-item">
								<button type="submit" class="btn btn-primary">Log out</button>
							</li>
						</ul>
					</form>
				</div>
			</div>
		</nav>
	}
	else
	{
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" asp-controller="Home" asp-action="WelcomePage">File Manager</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<form class="d-flex">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" asp-action="WelcomePage" asp-controller="Home">Main</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-action="Register" asp-controller="Account">Sign up</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-action="Login" asp-controller="Account">Log in</a>
							</li>
						</ul>
					</form>
				</div>
			</div>
		</nav>
	}
	<div class="container mt-2">
		@RenderBody()
	</div>
</body>
</html>