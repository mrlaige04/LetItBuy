<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>LetItBuy</title>
    <link rel="shortcut icon" type="image/x-icon" width="50" href="/favicon.ico"/>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.0/zephyr/bootstrap.min.css" integrity="sha512-4hshmZC4nWxAKC1H3MJBd2uRv+gRBkcBODzZoj3Jzd0XrF+osekpAAI1W7ASmMTuSKzrq+3xDoTfNU2sbNK67w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand col-md-3" asp-controller="Home" asp-action="GetWelcomePage">
            <img src="/Logos/Zip/png/logo-no-background.png"  width="50" height="30" alt="logobrand"/>
            LetItBuy
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav me-auto">            
            <li class="nav-item">
              <a class="nav-link" href="#">Categories</a>
            </li>
            <li class="nav-item">
                <form method="get" class="d-flex align-content-center" asp-controller="Home" asp-action="SearchItems">
                    <input name="q" class="form-control me-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                  </form>
            </li>
            

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Account</a>
              <div class="dropdown-menu">
                   @if(User.Identity.IsAuthenticated)
                    {
                       <a class="dropdown-item" asp-controller="User" asp-action="GetProfile">My account</a>
                       <a class="dropdown-item">My cart</a>
                       <a class="dropdown-item">My items</a>
                       <div class="dropdown-divider"></div>
                       <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                    } else {                      
                       <a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a>
                       <a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a>
                    }
              </div>
            </li>
          </ul>
          

          
        </div>
      </div>
    </nav>

    
	<div class="container  mt-2">
		@RenderBody()
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>	
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js">
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>